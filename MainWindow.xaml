<Window x:Class="Pr3_001.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pr3_001"
        mc:Ignorable="d"
        Title="MainWindow" Background="Aqua" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="Введите первое число:"/>
            <TextBox x:Name="number1TextBox"/>
            <TextBlock Text="Введите второе число:"/>
            <TextBox x:Name="number2TextBox"/>
            <Button Click="Button_Click" Content="OK"/>
            <TextBlock x:Name="txtOtv1"/>
            <TextBlock x:Name="txtOtv2"/>
        </StackPanel>
    </Grid>
</Window>
